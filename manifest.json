{
  "manifest_version": 3,
  "name": "YouTube to Piped.video Redirector",
  "version": "1.0",
  "description": "Redirects from YouTube to Piped.video using the video's ID",
  "permissions": ["tabs"],
  "content_scripts": [{
    "matches": ["https://www.youtube.com/watch*"],
    "css": ["styles.css"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
